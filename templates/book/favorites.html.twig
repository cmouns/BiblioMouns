{% extends 'base.html.twig' %}

{% block title %}Book index{% endblock %}

{% block body %}
<div class="container d-flex  gap-4">
    <a href="/"><button type="button" class="mt-2 ms-2 mb-4">RETOUR</button></a>
    {% for favorite in favorites %}
        <div class="card" style="width: 18rem;">
            <img src="{{ asset('uploads/images/' ~ favorite.getImage()) }}" class="card-img-top" alt="{{ favorite.name }}">
            <div class="card-body">
                <h5 class="card-title">{{ favorite.name }}</h5>
                <p class="card-text">{{ favorite.synopsis }}</p>
                <a href="#" class="btn btn-primary">En savoir plus</a>
                <a href="{{ path('app_add_book_favorite', {id: favorite.id}) }}">
                ❤️ Retirer des favoris
                </a>
            </div>
        </div>
    {% endfor %}
</div>

{% endblock %}
