{% extends 'base.html.twig' %}

{% block title %}Liste des livres{% endblock %}

{% block body %}
<div class="container my-5">
    {% include 'layouts/_flash_message.html.twig' %}

    <h2 class="mb-4 text-center">ðŸ“š Nos Livres</h2>

    <div class="row g-4">
        {% for book in books %}
            <div class="col-md-4 col-sm-6">
                <div class="card h-100 shadow-sm border-0">
                    <img 
                        src="{{ asset('uploads/images/' ~ book.getImage()) }}" 
                        alt="{{ book.getName() }}" 
                        class="card-img-top"
                        style="height: 250px; object-fit: contain; background: #f8f9fa;">
                    
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-truncate">{{ book.name }}</h5>
                        
                        <p class="card-text text-muted small mb-3" style="flex-grow: 1;">
                            {{ book.synopsis|slice(0, 120) }}{% if book.synopsis|length > 120 %}...{% endif %}
                        </p>

                        <div class="d-flex justify-content-between align-items-center mt-auto">
                            <a href="{{ path('app_home_book_show', {'id': book.id, 'slug': book.slug}) }}" 
                               class="btn btn-primary btn-sm">
                                 Voir plus
                            </a>
                            <a href="{{ path('app_add_book_favorite', {id: book.id}) }}" 
                               class="btn btn-outline-danger btn-sm">
                                 Favoris
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <p class="text-center text-muted">Aucun livre disponible pour le moment.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}
